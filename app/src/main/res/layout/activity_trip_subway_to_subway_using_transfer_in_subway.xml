<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_subway_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_transport_light_train_20dp"/>

        <TextView
            android:id="@+id/subway_to_subway_using_transfer_in_subway_time"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몇십분"
            android:textSize="15dp"/>

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background ="#ff0000"
        android:layout_width="4px"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subway_to_subway_using_transfer_in_subway_first_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몇 호선 어디역 승차"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subway_to_subway_using_transfer_in_subway_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="어디역 방면(어디행)"/>


        <TextView
            android:id="@+id/subway_to_subway_using_transfer_in_subway_quit_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="빠른 환승 4-1(환승케이스)"/>

        <TextView
            android:id="@+id/subway_to_subway_using_transfer_in_subway_station_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop = "7dp"
            android:textSize="12dp"
            android:text="몇 개 역 이동"/>

        <TextView
            android:id="@+id/subway_to_subway_using_transfer_in_subway_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="장미아파트\n학익시장\n법원.검찰청\n신동아3차아파트\n"
            android:textSize="11dp" />


        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/under" />

    </LinearLayout>

</LinearLayout>