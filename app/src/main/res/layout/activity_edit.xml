<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border"
        android:ems="15"
        android:gravity="center"
        android:text="lyt0528@naver.com"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border"
        android:ems="15"
        android:gravity="center"
        android:hint=" 영문자, 숫자의 조합으로 6~45자"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호 확인"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/edit_rewrite_pw"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border"
        android:ems="15"
        android:gravity="center"
        android:hint=" 비밀번호 재확인"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border"
        android:ems="15"
        android:gravity="center"
        android:text=" 임영택"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/edit_address"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border"
        android:ems="15"
        android:gravity="center"
        android:hint=" 인천 미추홀구 인하로 100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대전화"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border"
        android:ems="15"
        android:gravity="center"
        android:text="010-1234-5678"/>

    <Button
        android:id="@+id/edit_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:text="수정하기"
        android:textStyle="bold"
        android:ems="15"
        android:background="#14B411"/>




</LinearLayout>