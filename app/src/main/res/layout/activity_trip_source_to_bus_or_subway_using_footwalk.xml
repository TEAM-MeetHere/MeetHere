<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_foot_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_transport_walk_20dp"/>

        <TextView
            android:id="@+id/source_to_bus_or_subway_using_footwalk_time"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9분"
            android:textSize="15dp"/>

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background ="#808080"
        android:layout_width="4px"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/source_to_bus_or_subway_using_footwalk_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발!"
            android:textSize="23dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/source_to_bus_or_subway_using_footwalk_meter"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="도보 286m"/>

        <View
            android:background="@drawable/under"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>