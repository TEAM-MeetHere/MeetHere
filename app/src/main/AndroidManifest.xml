<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.meethere">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeetHere">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/ID" />
        <activity
            android:name=".RegisterActivity"
            android:label="회원가입"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/Register" />
        <activity
            android:name=".FindID"
            android:label="아이디 찾기"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/Register" />
        <activity
            android:name=".FindPW"
            android:label="비밀번호 찾기"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/Register" />
        <activity
            android:name=".AuthID"
            android:label="이메일 인증"
            android:parentActivityName=".RegisterActivity"
            android:theme="@style/Register" />

        <activity android:name=".EditActivity"
            android:label="정보 수정"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Register"/>
        <activity android:name=".BookmarkActivity"
            android:label="즐겨찾기"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Register"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Main">
        </activity>

        <activity
            android:name=".SetLocation_2_4"
            android:label="주소 입력"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Search"/>
        <activity
            android:name=".SelectLocation_2_5"
            android:label="상세 주소 입력"
            android:parentActivityName=".SetLocation_2_4"
            android:theme="@style/Search"/>
        <activity
            android:name=".SelectDestination_2_6"
            android:label="목적지 선택"
            android:parentActivityName=".SetLocation_2_4"
            android:theme="@style/Search"/>
        <activity
            android:name=".ShowResult_2_7"
            android:label="검색결과"
            android:parentActivityName=".SelectDestination_2_6"
            android:theme="@style/Search"/>
        <activity
            android:name=".ShowDetail_2_8"
            android:label="상세보기"
            android:parentActivityName=".ShowResult_2_7"
            android:theme="@style/Search"/>
        <activity
            android:name=".ShowDetailMap_2_9"
            android:label="지도보기"
            android:parentActivityName=".ShowDetail_2_8"
            android:theme="@style/Search"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

</manifest>